<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <h1>Searcher</h1>
            <hr>
        </div>
    </div>
</div>

<div class="container mt-3">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/museums/filter" method="POST">

                <div class="mb-3">
                    <label for="departments" class="form-label">Department:</label>
                    <select class="form-select" aria-label="Default select example" name="departments">
                        <option selected disabled>Open to select</option>
                        {{#each departments}}
                        <option value="{{reference}}" name="departments">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="input-group mb-3">
                    <label for="isHighLight" class="form-control" id="isHighLight">Do you want to see just the
                        Highlights?</label>
                    <div class="input-group-text">
                        <input class="form-check-input mt-0 me-2" type="radio" value="true" id="yes" name="isHighLight"
                            aria-label="Radio button for following text input">
                        <label for="yes" class="me-2">Yes</label>

                        <input class="form-check-input mt-0 me-2" type="radio" value="false" id="no" name="isHighLight"
                            aria-label="Radio button for following text input">
                        <label for="no">No</label>
                    </div>

                </div>

                <div class="input-group mb-3">
                    <label for="isOnView" class="form-control" id="isOnView">
                        Do you want to see just the pieces that are currently on view?</label>
                    <div class="input-group-text">
                        <input class="form-check-input mt-0 me-2" type="radio" value="true" id="true" name="isOnView"
                            aria-label="Radio button for following text input">
                        <label for="true" class="me-2">Yes</label>

                        <input class="form-check-input mt-0 me-2" type="radio" value="false" id="false" name="isOnView"
                            aria-label="Radio button for following text input">
                        <label for="false">No</label>
                    </div>

                </div>

                <label for="country" class="form-label">Country: </label>
                <input class="form-control mb-3" list="datalistOptions" id="country" placeholder="Type to search...">
                <datalist id="datalistOptions">
                    {{#each countries}}
                    <option value="{{name}}">
                        {{/each}}
                </datalist>



                <div class="mb-3">
                    <label for="query" class="form-label">Word</label>
                    <input type="text" class="form-control" id="query" name="query">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Search</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>
</div>