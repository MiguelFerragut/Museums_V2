<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <h1>Your search</h1>
            <hr>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">

        {{#each values}}
        <div class="mb-4 col-11 col-md-5 col-lg-3">

            <div class="card mr-2">

                <img src="{{primaryImage}}" class="card-img-top" alt="{{title}}">
                <div class="card-body m-3">
                    <h5 class="card-title"><b>Title: </b>{{title}}</h5>
                </div>

                <ul class="list-group list-group-flush m-3">
                    <li class="list-group-item"><b>Department: </b>{{department}}</li>
                    <li class="list-group-item"><b>Artist: </b>{{artistDisplayName}}</li>
                </ul>

                <div class="card-body d-flex justify-content-between m-3">
                    <a href="/museums/filter/{{objectID}}" class="btn btn-dark btn-lg">Details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>