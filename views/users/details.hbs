<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-8">
            <h1>{{user.username}} Profile</h1>
            <hr>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="card" style="width: 28rem;">

            <img src="{{user.avatar}}" class="card-img-top mt-2" alt="{{user.username}}">
            <div class="card-body">
                <h5 class="card-title"><b>Name: </b>{{user.username}}</h5>
            </div>
            <ul class="list-group list-group-flush mb-2">
                <li class="list-group-item"><b>Email: </b>{{user.email}}</li>
                <li class="list-group-item"><b>Role: </b>{{user.role}}</li>
            </ul>

            {{#if userOwner}}
            <div class="card-body d-flex justify-content-between">
                <a href="/users/edit/{{_id}}" class="btn btn-dark btn-lg">Edit</a>
                <form action="/users/delete/{{_id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg">
                </form>
            </div>
            {{/if}}

            {{#if userRoles.isAdmin}}
            <div class="card-body d-flex justify-content-between">
                <a href="/users/edit/{{_id}}" class="btn btn-dark btn-lg">Edit</a>

                <form action="/users/details/{{user._id}}/USER" method="POST">
                    <input type="submit" value="USER" class="btn btn-light btn-sm">
                </form>

                <form action="/users/details/{{user._id}}/GUIDE" method="POST">
                    <input type="submit" value="GUIDE" class="btn btn-light btn-sm">
                </form>

                <form action="/users/details/{{user._id}}/MANAGER" method="POST">
                    <input type="submit" value="MANAGER" class="btn btn-light btn-sm">
                </form>


                <form action="/users/delete/{{_id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg">
                </form>
            </div>
            {{/if}}

        </div>
    </div>
</div>

<div class="container">
    <h3>My Events</h3>
    <hr>

</div>

<div class="container mt-3 mb-3">
    <div class="row d-flex justify-content-center">

        {{#each events}}
        <div class="col-3">
            <div class="card" style="width: 28rem;">
                <img src="{{cover}}" class="card-img-top mt-2" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title"><b>Title: </b>{{title}}</h5>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Guide: </b>{{guideName.username}}</li>
                    <li class="list-group-item"> <b>Language:</b> {{language}}</li>
                    <li class="list-group-item"><b>Department: </b>{{departments.[0].name}}</li>
                    <li class="list-group-item"><b>Description: </b>{{description}}</li>
                    <li class="list-group-item"><b>Date: </b>{{date}}</li>
                    <li class="list-group-item"><b>Duration: </b>{{duration}} minutes</li>

                    <li class="list-group-item"><b>Participants: </b>
                        {{#each participants}}
                        <span>{{username}} |</span>
                        {{/each}}
                    </li>
                </ul>

                {{#if ../userOwner}}
                <div class="card-body d-flex justify-content-between">
                    <form action="/events/joinEvent/{{event._id}}" method="POST">
                        <input type="submit" value="Join Event" class="btn btn-danger btn-sm">
                    </form>
                    <form action="/events/exitEvent/{{objectID}}" method="POST">
                        <input type="submit" value="Leave Event" class="btn btn-danger btn-sm">
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="container">
    <h3>My Favourites</h3>
    <hr>
</div>

<div class="container mt-3 mb-3">
    <div class="row d-flex justify-content-center">

        {{#each favs}}

        <div class="col-3">
            <img src="{{primaryImage}}" class="card-img-top" alt="{{title}}">

            <p class="list-group-item"><b>Department: </b>{{department}}</p>
            <p class="list-group-item"><b>Artist: </b>{{artistDisplayName}}</p>
            <p class="list-group-item"><b>Description: </b>{{description}}</p>
            <p class="list-group-item"><b>Date: </b>{{objectBeginDate}} - {{objectEndDate}}</p>
            <p class="list-group-item"><b>Country: </b>{{country}}</p>

            <hr>

            {{#if ../userOwner}}
            <form action="/users/addToFav/{{objectID}}" method="POST">
                <input type="submit" value="Add to Fav" class="btn btn-danger btn-sm">
            </form>
            <form action="/users/removeFromFav/{{objectID}}" method="POST">
                <input type="submit" value="Remove Fav" class="btn btn-danger btn-sm">
            </form>

            <a href="{{objectURL}}" target="_blank" class="btn btn-dark btn-lg">See more</a>
            {{/if}}
        </div>

        {{/each}}
    </div>
</div>