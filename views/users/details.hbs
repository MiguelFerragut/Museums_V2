<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-8">
            <h1>User Details</h1>
            <hr>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="card" style="width: 28rem;">

            {{#if userRoles.isUser}}
            <img src="{{user.avatar}}" class="card-img-top" alt="{{user.username}}">
            <div class="card-body">
                <h5 class="card-title"><b>Name: </b>{{user.username}}</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Email: </b>{{user.email}}</li>
                <li class="list-group-item"><b>Role: </b>{{user.role}}</li>
            </ul>
            {{/if}}

            {{#if userRoles.isGuide}}
            <img src="{{user.avatar}}" class="card-img-top" alt="{{user.username}}">
            <div class="card-body">
                <h5 class="card-title"><b>Name: </b>{{user.username}}</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Email: </b>{{user.email}}</li>
                <li class="list-group-item"><b>Role: </b>{{user.role}}</li>
            </ul>
            {{/if}}

            {{#if userRoles.isManager}}
            <img src="{{user.avatar}}" class="card-img-top" alt="{{user.username}}">
            <div class="card-body">
                <h5 class="card-title"><b>Name: </b>{{user.username}}</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Email: </b>{{user.email}}</li>
                <li class="list-group-item"><b>Role: </b>{{user.role}}</li>
            </ul>
            {{/if}}

            {{#if userRoles.isAdmin}}
            <img src="{{user.avatar}}" class="card-img-top" alt="{{user.username}}">
            <div class="card-body">
                <h5 class="card-title"><b>Name: </b>{{user.username}}</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Email: </b>{{user.email}}</li>
                <li class="list-group-item"><b>Role: </b>{{user.role}}</li>
            </ul>
            <div class="card-body d-flex justify-content-between">
                <a href="/users/edit/{{_id}}" class="btn btn-dark btn-lg">Edit</a>
                <form action="/users/delete/{{_id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg">
                </form>
            </div>
            {{/if}}

        </div>
    </div>
</div>