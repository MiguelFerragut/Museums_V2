<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <h1>User Details</h1>
            <hr>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="card" style="width: 28rem;">
            <img src="{{avatar}}" class="card-img-top" alt="{{username}}">
            <div class="card-body m-3">
                <h5 class="card-title"><b>Name: </b>{{username}}</h5>
            </div>
            <ul class="list-group list-group-flush m-3">
                <li class="list-group-item"><b>Email: </b>{{email}}</li>
                <li class="list-group-item"><b>Role: </b>{{role}}</li>
            </ul>
            <div class="card-body d-flex justify-content-between m-3">
                <a href="/users/edit/{{_id}}" class="btn btn-dark btn-lg">Edit</a>
                <form action="/users/delete/{{_id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg">
                </form>
            </div>
        </div>
    </div>
</div>