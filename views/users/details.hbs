<div class="container mt-3">
    <div class="row justify-content-center">

        <h1>{{user.username}}</h1>
        <hr>

    </div>
</div>

<div class="container mb-5">

    <div class="row justify-content-center">

        <div class="col-6">
            <img src="{{user.avatar}}" class="profile-img mt-2" alt="{{user.username}}">
        </div>

        <div class="col-6">
            <div class="card-body">
                <h5 class="card-title"><b>Name: </b>{{user.username}}</h5>
            </div>
            <ul class="list-group list-group-flush mb-2">
                <li class="list-group-item"><b>Email: </b>{{user.email}}</li>
                <li class="list-group-item"><b>Role: </b>{{user.role}}</li>
            </ul>

            {{#if userOwner}}
            <div class="card-body d-flex justify-content-between">
                <a href="/users/edit/{{user._id}}" class="btn btn-dark mb-3">Edit</a>
                <form action="/users/delete/{{user._id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-dark mb-3">
                </form>
            </div>
            {{/if}}

            {{#if userRoles.isAdmin}}
            <div class="card-body d-flex justify-content-between">
                {{!-- <a href="/users/edit/{{user._id}}" class="btn btn-dark btn-lg">Edit</a> --}}

                <form action="/users/details/{{user._id}}/USER" method="POST">
                    <input type="submit" value="USER" class="btn btn-light btn-sm">
                </form>

                <form action="/users/details/{{user._id}}/GUIDE" method="POST">
                    <input type="submit" value="GUIDE" class="btn btn-light btn-sm">
                </form>

                <form action="/users/details/{{user._id}}/MANAGER" method="POST">
                    <input type="submit" value="MANAGER" class="btn btn-light btn-sm">
                </form>


                {{!-- <form action="/users/delete/{{user._id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg">
                </form> --}}
            </div>
            {{/if}}
        </div>
    </div>
</div>

<div class="container">
    <h3>My Events</h3>
    <hr>

</div>

<div class="container mt-3 mb-3">
    <div class="row d-flex justify-content-center">

        {{#each events}}
        <div class="col-4">
            <div class="card" style="width: 20rem;">
                <img src="{{cover}}" class="card-img-top mt-2" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title"><b>Title: </b>{{title}}</h5>
                </div>


                <p class="list-group-item m-2"><b>Guide: </b>{{guideName.username}}</p>
                <p class="list-group-item m-2"> <b>Language:</b> {{language}}</p>
                <p class="list-group-item m-2"><b>Department: </b>{{departments.[0].name}}</p>
                <p class="list-group-item m-2"><b>Description: </b>{{description}}</p>
                <p class="list-group-item m-2"><b>Date: </b>{{date.day}}</p>
                <p class="list-group-item m-2"><b>Duration: </b>{{date.duration}} minutes</p>

                <hr>

                {{#if ../userOwner}}
                <div class="row d-flex justify-content-between m-2">
                    <div class="col">
                        <form action="/events/exitEvent/{{objectID}}" method="POST">
                            <input type="submit" value="Leave Event" class="btn btn-dark btn-sm">
                        </form>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="container">
    <h3>My Favourites</h3>
    <hr>
</div>

<div class="container mt-3 mb-3">
    <div class="row d-flex justify-content-center">

        {{#each favs}}

        <div class="col-4">
            <div class="card" style="width: 20rem;">

                <img src="{{primaryImage}}" class="card-img-top" alt="{{title}}">

                <p class="list-group-item m-2"><b>Department: </b>{{department}}</p>
                <p class="list-group-item m-2"><b>Artist: </b>{{artistDisplayName}}</p>
                <p class="list-group-item m-2"><b>Description: </b>{{description}}</p>
                <p class="list-group-item m-2"><b>Date: </b>{{objectBeginDate}} - {{objectEndDate}}</p>
                <p class="list-group-item m-2"><b>Country: </b>{{country}}</p>

                <hr>

                {{#if ../userOwner}}
                <div class="row d-flex justify-content-between mb-2">
                    <div class="col">
                        <form action="/users/removeFromFav/{{objectID}}" method="POST" class="m-2">
                            <input type="submit" value="Remove Fav" class="btn btn-dark btn-sm">
                        </form>
                    </div>
                </div>

                <a href="{{objectURL}}" target="_blank" class="btn btn-dark m-1">See more</a>
                {{/if}}
            </div>
        </div>

        {{/each}}
    </div>
</div>