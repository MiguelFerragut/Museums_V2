<div class="hero">

    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-8 text-center">
                <h1>{{appTitle}}</h1>
                <p>Welcome ArtLover!</p>
                <hr>
            </div>
            <div class="col-8 mt-4">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/met.jpeg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://media.cntraveler.com/photos/5a84572586e4b63c297d47fd/16:9/w_2560,c_limit/The-Met_2018_GettyImages-541359628.jpg"
